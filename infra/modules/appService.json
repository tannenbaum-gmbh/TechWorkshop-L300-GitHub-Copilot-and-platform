{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.40.2.10011",
      "templateHash": "8584735122764972992"
    }
  },
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for the App Service resources"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to the App Service resources"
      }
    },
    "containerRegistryLoginServer": {
      "type": "string",
      "metadata": {
        "description": "Container Registry login server URL"
      }
    },
    "containerRegistryId": {
      "type": "string",
      "metadata": {
        "description": "Container Registry resource ID for RBAC assignment"
      }
    },
    "appInsightsConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Application Insights connection string"
      }
    },
    "imageName": {
      "type": "string",
      "defaultValue": "zava-storefront:latest",
      "metadata": {
        "description": "Docker image name including tag"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[format('plan-{0}', parameters('name'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "kind": "linux",
      "sku": {
        "name": "B1",
        "tier": "Basic"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "kind": "app,linux,container",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', format('plan-{0}', parameters('name')))]",
        "siteConfig": {
          "linuxFxVersion": "[format('DOCKER|{0}/{1}', parameters('containerRegistryLoginServer'), parameters('imageName'))]",
          "acrUseManagedIdentityCreds": true,
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[format('https://{0}', parameters('containerRegistryLoginServer'))]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('appInsightsConnectionString')]"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "80"
            }
          ],
          "alwaysOn": true
        },
        "httpsOnly": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', format('plan-{0}', parameters('name')))]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "scope": "[resourceId('Microsoft.ContainerRegistry/registries', last(split(parameters('containerRegistryId'), '/')))]",
      "name": "[guid(parameters('containerRegistryId'), resourceId('Microsoft.Web/sites', parameters('name')), 'AcrPull')]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '7f951dda-4ed3-4680-a7ca-43fe172d538d')]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('name')), '2022-09-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
      ]
    }
  ],
  "outputs": {
    "defaultHostname": {
      "type": "string",
      "metadata": {
        "description": "Default hostname of the web app"
      },
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name')), '2022-09-01').defaultHostName]"
    },
    "identityPrincipalId": {
      "type": "string",
      "metadata": {
        "description": "Principal ID of the web app managed identity"
      },
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name')), '2022-09-01', 'full').identity.principalId]"
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the web app"
      },
      "value": "[parameters('name')]"
    }
  }
}