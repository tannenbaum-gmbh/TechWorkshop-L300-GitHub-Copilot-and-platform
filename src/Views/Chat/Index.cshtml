@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-4">
    <h2><i class="bi bi-chat-dots"></i> Chat with AI Assistant</h2>
    <p class="text-muted">Powered by Phi-4 Mini Instruct via Microsoft Foundry</p>

    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label for="chatResponse" class="form-label fw-bold">Conversation</label>
                <textarea id="chatResponse" class="form-control" rows="12" readonly
                          placeholder="AI responses will appear here..."></textarea>
            </div>

            <div class="input-group">
                <textarea id="userMessage" class="form-control" rows="2"
                          placeholder="Type your message here..." aria-label="Your message"></textarea>
                <button id="sendBtn" class="btn btn-primary" type="button">
                    <i class="bi bi-send"></i> Send
                </button>
            </div>
            <div id="spinner" class="text-center mt-3 d-none">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <span class="ms-2">Waiting for response...</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const userMessageEl = document.getElementById('userMessage');
            const chatResponseEl = document.getElementById('chatResponse');
            const sendBtn = document.getElementById('sendBtn');
            const spinner = document.getElementById('spinner');

            function appendToConversation(role, text) {
                const timestamp = new Date().toLocaleTimeString();
                const prefix = role === 'You' ? `[${timestamp}] You` : `[${timestamp}] AI`;
                chatResponseEl.value += `${prefix}:\n${text}\n\n`;
                chatResponseEl.scrollTop = chatResponseEl.scrollHeight;
            }

            async function sendMessage() {
                const message = userMessageEl.value.trim();
                if (!message) return;

                appendToConversation('You', message);
                userMessageEl.value = '';
                sendBtn.disabled = true;
                spinner.classList.remove('d-none');

                try {
                    const response = await fetch('@Url.Action("SendMessage", "Chat")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: message })
                    });

                    const data = await response.json();
                    appendToConversation('AI', data.response);
                } catch (error) {
                    appendToConversation('AI', 'Error: Could not reach the server.');
                } finally {
                    sendBtn.disabled = false;
                    spinner.classList.add('d-none');
                    userMessageEl.focus();
                }
            }

            sendBtn.addEventListener('click', sendMessage);

            userMessageEl.addEventListener('keydown', function (e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });
        });
    </script>
}
